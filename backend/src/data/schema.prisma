generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Language {
  @@map("language") 

  id           Int            @id @default(autoincrement()) // @db.UnsignedInt
  name         String        //  @unique(map: "idx_language_name_unique") @db.VarChar(255)

}

model Category {
  @@map("category")  

  id           Int            @id @default(autoincrement()) // @db.UnsignedInt
  name         String         // @unique(map: "idx_category_name_unique") @db.VarChar(255)
}

model Source {
  @@map("source")  

  id           Int            @id @default(autoincrement()) // @db.UnsignedInt
  name         String         // @unique(map: "idx_category_name_unique") @db.VarChar(255)
}