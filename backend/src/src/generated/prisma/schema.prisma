// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Language {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  sources Source[]

  @@map("language")
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  sources Source[]

  @@map("category")
}

model Source {
  id       Int    @id @default(autoincrement())
  name     String @unique
  code     String
  category Int
  language Int

  categoryRelation Category @relation(fields: [category], references: [id])
  languageRelation Language @relation(fields: [language], references: [id])

  @@map("source")
}
